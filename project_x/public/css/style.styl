body
  font 14px "Lucida Grande", Helvetica, Arial, sans-serif
  padding 0
  margin 0

a
  color #00B7FF

form
	position fixed
	bottom 0
	width 100%
	input
		display inline-block
		vertical-align middle
		padding 10px
		height 10px
		outline none
	input[type="text"]
		width 80%
	input[type="submit"]
		width 18%
		background rgb(210,210,210)
		border none
		height 100%
.chat-box
	background white
	height 100%
	width 100%
	position absolute
.chat-box ul
	margin 0
	padding 0
	list-style none
	li
		padding 1em
@css {
    .chat-box ul li:nth-child(odd){
		background-color: white;
    }
    .chat-box ul li:nth-child(even){
		background-color: rgb(230,230,230);
    }
}
